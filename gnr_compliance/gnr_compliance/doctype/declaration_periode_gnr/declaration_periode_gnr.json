{
  "doctype": "DocType",
  "name": "Declaration Periode GNR",
  "module": "GNR Compliance",
  "autoname": "format:DECL-{type_periode}-{periode}-{annee}",
  "is_submittable": 1,
  "track_changes": 1,
  "fields": [
    {
      "fieldname": "section_periode",
      "fieldtype": "Section Break",
      "label": "Période"
    },
    {
      "fieldname": "type_periode",
      "fieldtype": "Select",
      "label": "Type",
      "options": "Trimestriel\nSemestriel\nAnnuel",
      "reqd": 1,
      "default": "Trimestriel",
      "in_list_view": 1
    },
    {
      "fieldname": "periode",
      "fieldtype": "Select",
      "label": "Période",
      "reqd": 1,
      "in_list_view": 1,
      "depends_on": "type_periode"
    },
    {
      "fieldname": "annee",
      "fieldtype": "Int",
      "label": "Année",
      "reqd": 1,
      "default": "eval:new Date().getFullYear()",
      "in_list_view": 1
    },
    {
      "fieldname": "column_break_1",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "statut",
      "fieldtype": "Select",
      "label": "Statut",
      "options": "Brouillon\nSoumise\nValidée\nTransmise",
      "default": "Brouillon",
      "in_list_view": 1,
      "read_only": 1
    },
    {
      "fieldname": "inclure_details_clients",
      "fieldtype": "Check",
      "label": "Liste Clients (Obligatoire semestriel)",
      "default": "1"
    },
    {
      "fieldname": "section_donnees",
      "fieldtype": "Section Break",
      "label": "Données Automatiques",
      "collapsible": 1,
      "depends_on": "eval:doc.docstatus==1"
    },
    {
      "fieldname": "total_ventes",
      "fieldtype": "Float",
      "label": "Total Ventes (L)",
      "precision": "3",
      "read_only": 1
    },
    {
      "fieldname": "total_taxe_gnr",
      "fieldtype": "Currency",
      "label": "Total Taxe GNR (€)",
      "read_only": 1
    },
    {
      "fieldname": "nb_clients",
      "fieldtype": "Int",
      "label": "Nombre Clients",
      "read_only": 1
    },
    {
      "fieldname": "column_break_2",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "date_debut",
      "fieldtype": "Date",
      "label": "Du",
      "read_only": 1
    },
    {
      "fieldname": "date_fin",
      "fieldtype": "Date",
      "label": "Au",
      "read_only": 1
    },
    {
      "fieldname": "section_observations",
      "fieldtype": "Section Break",
      "label": "Notes",
      "collapsible": 1
    },
    {
      "fieldname": "observations",
      "fieldtype": "Text",
      "label": "Observations"
    },
    {
      "fieldname": "donnees_detaillees",
      "fieldtype": "Long Text",
      "label": "Données JSON",
      "read_only": 1,
      "hidden": 1
    }
  ]
}
